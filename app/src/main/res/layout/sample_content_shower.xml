<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/root_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8pt">

    <LinearLayout
        android:padding="4pt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="15pt"
            android:text="Нзвание" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image"
                android:layout_width="70pt"
                android:layout_height="70pt"
                android:contentDescription="TODO"
                android:src="@drawable/bank"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/type"
                    android:paddingLeft="4pt"
                    android:layout_marginTop="4pt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Тип: храм, музей, пещера ..."/>
                <TextView
                    android:id="@+id/description"
                    android:paddingLeft="4pt"
                    android:layout_marginTop="4pt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Описание объекста, оно может умститься в несколько строк и включить в себя много информации"
                    />
                <TextView
                    android:id="@+id/location"
                    android:paddingLeft="4pt"
                    android:layout_marginTop="4pt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Местоположение объекста, обычно это адресс"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>
